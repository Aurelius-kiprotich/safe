<%- include('partials/header') %>

<main id="signup">
    <form action="/signup" method="post">
        <h2>Sign up</h2>
        
        <% if(error){ %>
            <p class="error"><%= message %></p>
        <% } %>

        <input type="text" name="fullname" id="" placeholder="Full Name" value="<%=user.fullname %>" required>
        <input type="email" name="email" id="" placeholder="Email Address" value="<%= user.email %>" required>
        <input type="password" name="password" id="" placeholder="Password"  value="<%= user.password %>" minlength="8" required>
        <input type="password" name="confirmPassword" id="" placeholder="Confirm Password" value="<%= user.confirmPassword %>" minlength="8" required>
        <input type="submit" value="Create Account">
        <p>Already have an account <a href="/login">Log In</a></p>
    </form>
</main>

<%- include('partials/footer') %>